extends ../aalayout/layout

block content
	.container.mt-3
		if curAder
			-a;
			.row.text-center
				.col-6.col-lg-3.mt-3
					a(href="/adUsers")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 用户列表
				.col-6.col-lg-3.mt-3
					a(href="/adShops")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 商店列表
				.col-6.col-lg-3.mt-3
					a(href="/adFirms")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 公司列表
			.row.text-center
				.col-6.col-lg-3.mt-3
					a(href="/adNations")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 国家列表
				.col-6.col-lg-3.mt-3
					a(href="/adAreas")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 大区列表
				.col-6.col-lg-3.mt-3
					a(href="/adCitas")
						img(src="/media/icon/indicate.png", width="50px", height="50px")
						span.btn.btn-default.btn-lg.btn-block 城市列表
			hr
			form(method="post", action='/excel_Brand', enctype="multipart/form-data")
				.form-group.row.udPhoto
					.col-md-4
						select#FirmIpt.form-control(name="obj[Firm]", data-style="btn-info")
							//- option(value=0) 请选择
							each Firm in Firms
								-a;
								option(value=Firm._id) #{Firm.code}
					.col-md-4
						input.btn.btn-info.btn-block(type="file", name="mulFile")
					.col-md-4
						input.btn.btn-success(type="submit" value="Brand批量上传")
			form(method="post", action='/excel_Pd', enctype="multipart/form-data")
				.form-group.row.udPhoto
					.col-md-4
						select#FirmIpt2.form-control(name="obj[Firm]", data-style="btn-info")
							//- option(value=0) 请选择
							each Firm in Firms
								-a;
								option(value=Firm._id) #{Firm.code}
					.col-md-4
						input.btn.btn-info.btn-block(type="file", name="mulFile")
					.col-md-4
						input.btn.btn-success(type="submit" value="Pd批量上传")
			form(method="post", action='/excel_Prod', enctype="multipart/form-data")
				.form-group.row.udPhoto
					.col-md-3
						select#FirmIpt3.form-control(name="obj[Firm]", data-style="btn-info")
							//- option(value=0) 请选择
							each Firm in Firms
								-a;
								option(value=Firm._id) #{Firm.code}
					.col-md-3
						select#ShopIpt.form-control(name="obj[Shop]", data-style="btn-info")
							//- option(value=0) 请选择
							each Shop in Shops
								-a;
								option(value=Shop._id) #{Shop.code}
					.col-md-3
						input.btn.btn-info.btn-block(type="file", name="mulFile")
					.col-md-3
						input.btn.btn-success(type="submit" value="Prod批量上传")
		else
			h1 admin login
			hr
			form(method="post", action="/loginAder")
				.form-group.row
					label.col-4.col-sm-2.col-form-label(for="codeIpt") 超级管理账号
					.col-8.col-sm-6
						input#codeIpt.form-control(type="name", name="code", placeholder="Please input your code")
				.form-group.row
					label.col-4.col-sm-2.col-form-label(for="pwdIpt") 密码
					.col-8.col-sm-6
						input#pwdIpt.form-control(type="password", name="pwd", placeholder="Your password")
				.form-group.row
					.offset-sm-6.col-sm-2
						button.btn.btn-success.btn-block(type="submit") SignIn